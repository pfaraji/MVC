
@model  ICollection<webproducts.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <table class="table table-hover table-bordered table-striped">
                    <thead>
                        <tr>
                            <th> ID Product</th>
                            <th> Product Name </th>
                            <th> color</th>
                            <th> List Price ($)</th>
                        </tr>
                        
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductID</td>
                                <td>@product.Name</td>
                                <td>@product.Color</td>
                                <td>@product.ListPrice.ToString("c")</td>
                            </tr>
                        }
                    </tbody>
                </table> 
            </div>
        </div>
    </div>
    <div>
    </div>

    

</body>

</html>

